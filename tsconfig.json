{
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    // "types": ["@types/node"],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "blocks/**/*.vue", "env.d.ts", "src/main.js"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
